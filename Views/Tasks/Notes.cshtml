@model IEnumerable<OpenLawOffice.Web.ViewModels.Notes.NoteViewModel>

@{ 
    ViewBag.Title = "Task Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="roadmap">
    <div class="zero">Matter: [@(Html.ActionLink((string)ViewBag.Matter, "Details", "Matters", new { id = ViewBag.MatterId }, null))]</div>
    <div class="one">Task: [@(Html.ActionLink((string)ViewBag.Task, "Details", "Tasks", new { id = ViewBag.TaskId }, null))]</div>
    <div id="current" class="two">Task Notes<a id="pageInfo" class="btn-question" style="padding-left: 15px;">Help</a></div>
</div>
    
<table class="listing_table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Body
        </th>
        <th style="width: 20px;">
        </th>
    </tr>
    @{ bool altRow = true;}
@foreach (var item in Model)
{
    altRow = !altRow;
    if (altRow)
    {
    <tr class="tr_alternate">
        <td>
            @(Html.ActionLink(item.Title, "Details", "Notes", new { id = item.Id }, null))
        </td>
        <td>
            @if (item.Body.Length > 100)
            {
                <text>@(item.Body.Substring(0, 100))...</text>
            }
            else
            {
                @(item.Body)
            }
        </td>
        <td>
            @(Html.ActionLink("Edit", "Edit", "Notes", new { id = item.Id }, new { @class = "btn-edit", title = "Edit" }))
        </td>
    </tr> }
    else
    { <tr>
        <td>
            @(Html.ActionLink(item.Title, "Details", "Notes", new { id = item.Id }, null))
        </td>
        <td>
            @if (item.Body.Length > 100)
            {
                <text>@(item.Body.Substring(0, 100))...</text>
            }
            else
            {
            @(item.Body)
            }
        </td>
        <td>
            @(Html.ActionLink("Edit", "Edit", "Notes", new { id = item.Id }, new { @class = "btn-edit", title = "Edit" }))
        </td>
    </tr>
    }
}
</table>
    
<div id="pageInfoDialog" title="Help">
    <p>
    <span style="font-weight: bold; text-decoration: underline;">Info:</span>
    Notes allow users to make comments or record information on tasks.<br /><br />
    <span style="font-weight: bold; text-decoration: underline;">Usage:</span>
    Clicking the title will show the details of the note.  Click the 
    <img src="../../Content/fugue-icons-3.5.6/icons-shadowless/pencil.png" /> (edit icon) to make 
    changes to the note.
    </p>
</div> 