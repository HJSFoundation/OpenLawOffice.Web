@model IEnumerable<OpenLawOffice.Web.ViewModels.Matters.CourtSittingInCityViewModel>

@{ 
    ViewBag.Title = "Court Sitting In Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>
    Court Sitting In Cities<a id="pageInfo" class="btn-question" style="padding-left: 15px;">Help</a></h2>
        
<table class="listing_table">
    <tr>
        <th>
            Title
        </th>
        <th style="width: 45px;">
        </th>
    </tr>
    @{ bool altRow = true;}
@foreach (var item in Model)
{
    altRow = !altRow;
    if (altRow)
    {
    <tr class="tr_alternate">
        <td>
            @(Html.ActionLink(item.Title, "Details", new { id = item.Id }))
        </td>
        <td style="text-align: center;">
            @(Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-edit", title = "Edit" }))
            @(Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-remove", title = "Remove" }))
        </td>
    </tr> }
    else
    { <tr>
        <td>
            @(Html.ActionLink(item.Title, "Details", new { id = item.Id }))
        </td>
        <td style="text-align: center;">
            @(Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn-edit", title = "Edit" }))
            @(Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-remove", title = "Remove" }))
        </td>
    </tr>
    }
}
</table> 