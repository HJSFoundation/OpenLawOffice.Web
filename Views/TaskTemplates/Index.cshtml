@model IEnumerable<OpenLawOffice.Web.ViewModels.Tasks.TaskTemplateViewModel>

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Task Templates";
    ViewBag.PageTitle = "Task Templates";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Settings">Settings</a></li>
        <li><a href="/TaskTemplates" class="active">Task Templates</a></li>
    </ul>
}

<div class="panel panel-default">
    <div class="panel-heading">
        Task Templates
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-hover table-text-small">
            <thead>
                <tr>
                    <th>
                        Template Title
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(Html.ActionLink(item.TaskTemplateTitle, "Details", new { id = item.Id }))
                        </td>
                        <td class="text-right">
                            <button type="button" class="btn btn-xs btn-default" onclick="navTo('/TaskTemplates/Edit/@(item.Id.Value)')">
                                <span class="fa fa-pencil"></span> Edit
                            </button>
                            <button type="button" class="btn btn-xs btn-default" onclick="navTo('/TaskTemplates/Delete/@(item.Id.Value)')">
                                <span class="fa fa-times"></span> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>