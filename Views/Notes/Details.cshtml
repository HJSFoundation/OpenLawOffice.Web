@model OpenLawOffice.Web.ViewModels.Notes.NoteViewModel

@{ 
    ViewBag.Title = "Note Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="roadmap">
    <div class="zero">Matter: [@(Html.ActionLink((string)ViewBag.Matter, "Details", "Matters", new { id = ViewBag.MatterId }, null))]</div>
    @if (ViewBag.Task != null)
        {
    <div class="one">Task: [@(Html.ActionLink((string)ViewBag.Task, "Details", "Tasks", new { id = ViewBag.TaskId }, null))]</div>
    <div id="current" class="two">Note Details<a id="pageInfo" class="btn-question" style="padding-left: 15px;">Help</a></div>
    }
        else
        {           
    <div id="current" class="one">Note Details<a id="pageInfo" class="btn-question" style="padding-left: 15px;">Help</a></div>
    }
</div>
    
<div class="options_div" style="text-align: right;">
    <div style="width: 200px; display: inline;">
        <a href="../Edit/@(ViewContext.RouteData.Values["Id"])">
            <input type="button" value="Edit" id="Edit"
                   style="background-image: url('/Content/fugue-icons-3.5.6/icons-shadowless/pencil.png');
                background-position: left center; background-repeat: no-repeat; padding-left: 20px;" />
        </a>
    </div>
</div>

<table class="detail_table">
    <tr>
        <td class="display-label">
            Id
        </td>
        <td class="display-field">
            @(Model.Id)
        </td>
    </tr>
    <tr>
        <td class="display-label">
            Date/Time
        </td>
        <td class="display-field">
            @(Model.Timestamp)
        </td>
    </tr>
    <tr>
        <td class="display-label">
            Title
        </td>
        <td class="display-field">
            @(Model.Title)
        </td>
    </tr>
    <tr>
        <td class="display-label" style="vertical-align: top;">
            Body
        </td>
        <td class="display-field" style="vertical-align: top;">
            @Html.Raw(Model.Body)
        </td>
    </tr>
</table>
    
<table class="listing_table">    
    <tr>
        <td colspan="3" class="listing_table_heading">
            Notifications
        </td>
    </tr>
    <tr>
        <th style="text-align: center;">
            Contact
        </th>
        <th style="text-align: center; width: 170px; padding-right: 10px;">
            Cleared At
        </th>
    </tr>
    @{ bool altRow = true;}
@foreach (var item in Model.NoteNotifications)
{
    altRow = !altRow;
    if (altRow)
    {
    <tr class="tr_alternate">
        <td>
            @(Html.ActionLink(item.Contact.DisplayName, "Details", "Contacts", new { id = item.Contact.Id.Value }, null))
        </td>
        <td>
            @(item.Cleared)
        </td>
    </tr> }
    else
    { <tr>
        <td>
            @(Html.ActionLink(item.Contact.DisplayName, "Details", "Contacts", new { id = item.Contact.Id.Value }, null))
        </td>
        <td>
            @(item.Cleared)
        </td>
    </tr>
    }
}
</table>
<br />
@{ Html.RenderPartial("_CoreDetails");}

<div id="pageInfoDialog" title="Help">
    <p>
    <span style="font-weight: bold; text-decoration: underline;">Info:</span>
    Displays detailed information of the note.
    </p>
</div> 